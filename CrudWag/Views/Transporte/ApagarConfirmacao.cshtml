@{
}


<div class="container">



<div class="container-fluid py-4 mx-8">

<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Contact Info</h4>
            <div class="owl-carousel owl-theme full-width owl-carousel-dash portfolio-carousel" id="owl-carousel-basic">
                <img src="@Model.ImageURL" class="rounded-lg" alt="">
            </div>
            <div class="d-flex py-4">
                <div class="preview-list w-100">
                    <div class="preview-item p-0">
                        <div class="preview-item-content d-flex flex-grow">
                            <div class="flex-grow">
                                <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                    <h6 class="preview-subject">@Model.Modelo</h6>
                                    <p class="text-muted text-small">@Model.Ano </p>
                                </div>
                                <p class="text-muted">@Model.CapacidadePassageiro</p>
                                <p class="text-muted">@Model.TaxaAluguer</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <p class="text-muted">@Model.IsAvailable</p>
            <p class="text-muted">@Model.TransporteTipo</p>
        

        </div>
        <div class="mb-4 ml-4 p-4">
            <hr />
            <a type="button" class="btn btn-dark" asp-controller="Transporte" asp-action="Index">Voltar</a> |
            <a type="button" class="btn btn-primary" asp-route-id="@Model.Id" asp-controller="Transporte" asp-action="Apagar">Deletar</a>


            <br />
        </div>
    </div>
</div>
    </div>
</div>


