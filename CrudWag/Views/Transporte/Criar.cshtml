@using CrudWag.Data.Enum;
@model TransporteModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<main class="main-content mt-0">
    <section>
        <div class="page-header min-vh-100">
            <div class="container">
                <div class="row">
                    <div class="col-xl-8 col-lg-8 col-md-12 d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-8">
                        <div class="card card-plain">
                            <div class="card-header">
                                <h4 class="font-weight-bolder">Transporte</h4>
                                <p class="mb-0">Formulário de registro de transporte</p>
                            </div>
                            <div class="card-body">
                                <form asp-controller="Transporte" asp-action="Criar" method="post" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="input-group input-group-outline mb-3">
                                                <input type="file" class="form-control" asp-for="ImageFile" placeholder="Imagem do transporte">
                                            </div>
                                            <span asp-validation-for="ImageFile" class="text-danger"></span>


                                            <div class="input-group input-group-outline mb-3">
                                                <label class="form-label">Modelo</label>
                                                <input type="text" class="form-control" asp-for="Modelo">
                                            </div>
                                            <span asp-validation-for="Modelo" class="text-danger"></span>


                                            <div class="input-group input-group-outline mb-3">
                                                <label class="form-label">Ano</label>
                                                <input type="number" class="form-control" asp-for="Ano">
                                            </div>

                                            <div class="input-group input-group-outline mb-3">
                                                <label class="form-label">Taxa de Aluguer em euros (€)</label>
                                                <input type="number" class="form-control" asp-for="TaxaAluguer">
                                            </div>


                                            <span asp-validation-for="Ano" class="text-danger"></span>
                                            <div class="input-group input-group-outline mb-3">
                                                <label class="form-label">Capacidade Carga ou Passageiro</label>
                                                <input type="text" class="form-control" asp-for="CapacidadePassageiro">
                                            </div>
                                            <span asp-validation-for="CapacidadePassageiro" class="text-danger"></span>
                                        </div>

                                        <div class="input-group input-group-outline mb-3">
                                            <select class="form-select" asp-for="IsAvailable">
                                                <option value="">Escolha a disponibilidade</option>
                                                <option value="true">Disponível</option>
                                                <option value="false">Indisponível</option>
                                            </select>
                                        </div>

                                        <div class="input-group input-group-outline mb-3">
                                        <select class="form-select" asp-for="TransporteTipo">
                                            <option value="">Escolha o tipo de transporte</option>
                                            <option value="@TransporteTipoEnum.Automovel">Autómovel</option>
                                            <option value="@TransporteTipoEnum.Camiao">Camiaão</option>
                                            <option value="@TransporteTipoEnum.Autocarro">Autocarro</option>
                                            <option value="@TransporteTipoEnum.Limousine">Limousine</option>
                                            <option value="@TransporteTipoEnum.Mota">Mota</option>
                                            <option value="@TransporteTipoEnum.Bicicleta">Bicicleta</option>
                                            <option value="@TransporteTipoEnum.MotadeAgua">Mota de Água</option>
                                        </select>
                                    </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-check form-check-info text-start ps-0">
                                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked>
                                                <label class="form-check-label" for="flexCheckDefault">
                                                    Concordo com os <a href="javascript:;" class="text-dark font-weight-bolder">Termos e Condições</a>
                                                </label>
                                            </div>
                                            <button type="submit" class="btn btn-primary mr-2">Registar</button>
                                            <button class="btn btn-dark" asp-controller="Transporte" asp-action="Index">Cancelar</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center pt-0 px-lg-2 px-1">
                                <p class="mb-2 text-sm mx-auto">
                                    Já tem uma conta?
                                    <a href="../pages/sign-in.html" class="text-primary text-gradient font-weight-bold">Entre</a>
                                </p>
                            </div>
                        </div>
                    </div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#ImageFile").on("change", function () {
                var file = this.files[0];
                if (file) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#ProfilePicturePreview').attr('src', e.target.result);
                    };
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
}