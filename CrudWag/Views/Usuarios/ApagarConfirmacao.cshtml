@{
}

<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Contact Info</h4>
            <div class="owl-carousel owl-theme full-width owl-carousel-dash portfolio-carousel" id="owl-carousel-basic">
                <img src="@Model.ImageURL" class="rounded-lg" alt="">
            </div>
            <div class="d-flex py-4">
                <div class="preview-list w-100">
                    <div class="preview-item p-0">
                        <div class="preview-item-content d-flex flex-grow">
                            <div class="flex-grow">
                                <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                    <h6 class="preview-subject">@Model.Nome</h6>
                                    <p class="text-muted text-small">@Model.DataCadastro.ToString("dd MMM yyyy")</p>
                                </div>
                                <p class="text-muted">@Model.Login</p>
                                <p class="text-muted">@Model.Email</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @if (@Model.Perfil == CrudWag.Data.Enum.PerfilEnum.Admin)
            {
                <span class="badge bg-warning text-white">@Model.Perfil</span>
            }
            else
            {
                <span class="badge bg-success text-white">@Model.Perfil</span>
            }
            <div class="modal-footer">
                <a type="button" class="btn btn-inverse-danger btn-sm" asp-controller="Usuarios" asp-action="Apagar" asp-route-id="@Model.Id">Delet</a>
            </div>
        </div>
    </div>
</div>