@{
}


<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-100">
            <div class="container">
                <div class="row">

                    <div class="col-xl-8 col-lg-8 col-md-12 d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-8">
                        <div class="card card-plain">
                            <div class="card-header">
                                <h4 class="font-weight-bolder">Motorista</h4>
                                <p class="mb-0">Formulário de registro de motorista</p>
                            </div>
                            <div class="card-body">
            <form class="forms-sample" asp-controller="Contato" asp-action="Apagar" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label for="ImgUrl">Image Url</label>
                    <input type="text" class="form-control" asp-for="ImgUrl" placeholder="Image Url" id="disabledTextInput">
                </div>
                <div class="form-group">
                    <label for="ImgUrl">Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Your Name" id="disabledTextInput">
                </div>
                <div class="form-group">
                    <label for="Email">Email address</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Your Email" id="disabledTextInput">
                </div>
                <div class="form-group">
                    <label for="Phone">Phone</label>
                    <input type="number" class="form-control" asp-for="Phone" placeholder="Your Phone" id="disabledTextInput">
                </div>
                <div class="form-group">
                    <label for="ImgUrl">Job</label>
                    <input type="text" class="form-control" asp-for="Job" placeholder="Your Name" id="disabledTextInput">
                </div>
                <div class="form-group">
                    <label for="Observation">Observation</label>
                    <textarea class="form-control" asp-for="Observation" rows="4" id="disabledTextInput"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Apagar</button>
                <button class="btn btn-dark" asp-controller="Contato" asp-action="Index">Cancel</button>
            </form>
</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

